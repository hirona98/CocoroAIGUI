<Window x:Class="CocoroAIGUI.Controls.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CocoroAIGUI.Controls"
        xmlns:converters="clr-namespace:CocoroAIGUI.Converters"
        mc:Ignorable="d"
        Title="管理画面"
        Height="550"
        Width="800"
        WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <!-- タブスタイル -->
        <Style x:Key="AdminTabItemStyle"
               TargetType="TabItem">
            <Setter Property="Background"
                    Value="#F0F0F0"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Padding"
                    Value="15,10"/>
            <Setter Property="FontSize"
                    Value="14"/>
            <Setter Property="Foreground"
                    Value="#666666"/>
            <Setter Property="Margin"
                    Value="0,0,2,0"/>
            <Style.Triggers>
                <Trigger Property="IsSelected"
                         Value="True">
                    <Setter Property="Background"
                            Value="White"/>
                    <Setter Property="Foreground"
                            Value="#4873CF"/>
                    <Setter Property="BorderThickness"
                            Value="0,0,0,3"/>
                    <Setter Property="BorderBrush"
                            Value="#4873CF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 変換器 -->
        <converters:PercentageConverter x:Key="PercentageConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TabControl x:Name="AdminTabControl"
                    BorderThickness="0"
                    Background="White"
                    Grid.Row="0">

            <TabItem Header="表示設定"
                     Style="{StaticResource AdminTabItemStyle}"
                     ToolTip="Display Setting">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <ScrollViewer Grid.Row="0"
                                  VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <CheckBox x:Name="TopMostCheckBox"
                                      Content="最前面に表示"
                                      Margin="0,5"
                                      Foreground="#FF4873CF"
                                      ToolTip="Top most"/>
                            <CheckBox x:Name="EscapeCursorCheckBox"
                                      Content="カーソルから逃げる"
                                      Margin="0,5"
                                      ToolTip="Escape cursor"
                                      Foreground="#FF4873CF"/>
                            <CheckBox x:Name="AutoMoveCheckBox"
                                      Content="自動的に移動する"
                                      Margin="0,5"
                                      ToolTip="Auto move"
                                      Foreground="#FF4873CF"/>

                            <!-- ウィンドウサイズ設定 -->
                            <GroupBox Header="ウィンドウサイズ"
                                      Margin="0,10,0,0"
                                      Padding="10"
                                      ToolTip="Window size">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Slider x:Name="WindowSizeSlider"
                                            Minimum="100"
                                            Maximum="2000"
                                            Value="650"
                                            TickFrequency="100"
                                            TickPlacement="BottomRight"
                                            Margin="0,5"
                                            Grid.Row="0"/>

                                    <TextBlock Grid.Row="1"
                                               Margin="0,5">
                                        <Run Text="サイズ: "/>
                                        <Run Text="{Binding ElementName=WindowSizeSlider, Path=Value, StringFormat='{}{0:0}'}"/>
                                    </TextBlock>
                                </Grid>
                            </GroupBox>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <TabItem Header="キャラクター設定"
                     Style="{StaticResource AdminTabItemStyle}"
                     ToolTip="Character setting">
                <Grid Margin="20,20,0,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <ScrollViewer Grid.Row="1"
                                  VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- キャラクター選択 -->
                            <GroupBox Header="キャラクター選択（要再起動）"
                                      Margin="0,0,20,20"
                                      Padding="10"
                                      ToolTip="Select Character (Restart Required)">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <ComboBox x:Name="CharacterSelectComboBox"
                                              Grid.Column="0"
                                              Margin="0,5,10,5"
                                              SelectionChanged="CharacterSelectComboBox_SelectionChanged"
                                              Foreground="#FF4873CF">
                                    </ComboBox>

                                    <Button x:Name="AddCharacterButton"
                                            Grid.Column="1"
                                            Content="キャラクターを追加"
                                            Margin="0,5,0,5"
                                            Padding="10,5"
                                            Click="AddCharacterButton_Click"
                                            Foreground="#FF4873CF"
                                            ToolTip="Add character"/>
                                </Grid>
                            </GroupBox>

                            <!-- 基本設定 -->
                            <GroupBox Header="基本設定"
                                      Margin="0,0,20,20"
                                      Padding="10"
                                      ToolTip="Basic setting">
                                <StackPanel>
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="名前:"
                                                   VerticalAlignment="Center"
                                                   ToolTip="Name"/>
                                        <TextBox Grid.Column="1"
                                                 x:Name="CharacterNameTextBox"
                                                 Margin="0,5"
                                                 Foreground="#FF0078D7"/>
                                    </Grid>

                                    <!-- VrmFilePathの設定 -->
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="VRMファイル:"
                                                   VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="1"
                                                 x:Name="VrmFilePathTextBox"
                                                 Margin="0,5,5,5"
                                                 Foreground="#FF0078D7"
                                                 IsReadOnly="True"/>
                                        <Button Grid.Column="2"
                                                x:Name="BrowseVrmFileButton"
                                                Content="開く..."
                                                Padding="10,0"
                                                Click="BrowseVrmFileButton_Click"
                                                ToolTip="Open..." VerticalAlignment="Center" Foreground="#FF4873CF"/>
                                    </Grid>
                                </StackPanel>
                            </GroupBox>

                            <!-- LLMパラメータ -->
                            <GroupBox Header="LLM(gpt, o1, o3, gemini)"
                                      Margin="0,0,20,20"
                                      Padding="10">
                                <StackPanel>
                                    <Grid Margin="0,5">
                                        <CheckBox x:Name="IsUseLLMCheckBox"
                                                  Content="LLMを使用する"
                                                  Margin="0,5,0,15"
                                                  Foreground="#FF4873CF"
                                                  ToolTip="Use LLM"/>
                                    </Grid>

                                    <!-- APIキーの設定 -->
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="APIキー:"
                                                   VerticalAlignment="Center"/>
                                        <PasswordBox Grid.Column="1"
                                                     x:Name="ApiKeyPasswordBox"
                                                     Margin="0,5"
                                                     PasswordChar="●"
                                                     ToolTip="Enter your API key"/>
                                    </Grid>

                                    <!-- LLMモデルの設定 -->
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="LLMモデル:"
                                                   VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="1"
                                                 x:Name="LlmModelTextBox"
                                                 Margin="0,5"
                                                 Foreground="#FF0078D7"
                                                 Text=""/>
                                    </Grid>

                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="プロンプト:"
                                                   VerticalAlignment="Top"
                                                   ToolTip="Prompt"/>
                                        <TextBox Grid.Column="1"
                                                 x:Name="SystemPromptTextBox"
                                                 Margin="0,5"
                                                 Foreground="#FF0078D7"
                                                 Height="100"
                                                 AcceptsReturn="True"
                                                 TextWrapping="Wrap"
                                                 VerticalScrollBarVisibility="Auto"/>
                                    </Grid>

                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                    </Grid>
                                </StackPanel>
                            </GroupBox>

                            <Button x:Name="DeleteCharacterButton"
                                    Content="このキャラクターを削除"
                                    Padding="15,5"
                                    Background="#d32f2f"
                                    Foreground="WhiteSmoke"
                                    Click="DeleteCharacterButton_Click"
                                    HorizontalAlignment="Left"
                                    Margin="0,10,0,0"/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <TabItem Header="ライセンス"
                     Style="{StaticResource AdminTabItemStyle}"
                     ToolTip="License">
                <Grid Margin="20,20,20,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBox Grid.Column="1"
                             x:Name="LicenseTextBox"
                             Margin="0,5"
                             Foreground="#FF0078D7"
                             Height="100"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"/>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- 共通OK/キャンセルボタンエリア -->
        <Border Grid.Row="1"
                Background="#F5F5F5"
                Padding="15"
                BorderBrush="#E0E0E0"
                BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button x:Name="OkButton"
                        Content="OK"
                        Width="80"
                        Height="30"
                        Margin="0,0,10,0"
                        Background="#4873CF"
                        Foreground="WhiteSmoke"
                        Click="OkButton_Click"/>
                <Button x:Name="CancelButton"
                        Content="キャンセル"
                        Width="80"
                        Height="30"
                        Click="CancelButton_Click" Foreground="#FF4873CF"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>